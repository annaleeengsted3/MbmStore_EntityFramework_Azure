@model IEnumerable<string>

<a class="btn btn-block btn-secondary"
   asp-action="Index"
   asp-controller="Catalogue"
   asp-route-category="">
    Home
</a>

@foreach (string category in Model)
{
   <a class="btn btn-block @(category == ViewBag.SelectedCategory ? "btn-primary": "btn-secondary")"
   asp-action="Index"
   asp-controller="Catalogue"
   asp-route-category="@category"
   asp-route-page="1">
    @category
</a>
    //if we omit asp-route-page the routing system will take the next match: Catalogue/{category}
    //if we omit asp-route-category it will be /Page1
}
